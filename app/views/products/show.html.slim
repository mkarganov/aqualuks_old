h2= @product.name
p= @product.description
p= @product.price
.row-fluid
  ul.inline#preview
    - @product.product_images.each do |image|
      li
        =link_to '#imagePreview', remote: true, data: { toggle: 'modal', keyboard: true} do
          =image_tag(image.image_url(:thumb))
p=link_to 'Add to cart', add_to_cart_product_path(@product)

#imagePreview.modal.fade tabindex='-1'
  button type="button" class="close" data-dismiss="modal" aria-hidden="true" Ã—
  .slider
    ul.slides.unstyled
      - @product.product_images.each do |image|
        li.slide-glide
          = image_tag(image.image_url)

javascript:
  $(function() {
    $('#imagePreview > .slider').glide({
      autoplay: false,
      arrows: true,
      nav: false
    });
    $('.modal').hide();
  });
