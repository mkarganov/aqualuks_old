.row-fluid
  .span5
    p.main-image= image_tag(@product.product_images.first.image_url)
    .row-fluid
      ul.inline#preview
        - @product.product_images.each do |image|
          li.span2
            =link_to '#', remote: true do
              =image_tag(image.image_url(:thumb))
  .span7
    .row-fluid
      .span4
        h2= @product.name
        ul.well.inline
          li= number_to_currency(@product.price)
          li=link_to t('.add_to_cart'), add_to_cart_product_path(@product), class: 'btn', remote: true
      .span3
    ul.nav.nav-tabs
      li.active
        a href='#' Description
      li
        a href='#' Characteristics
    p= @product.description

#image-preview-modal.modal.fade tabindex='-1'
  button type="button" class="close" data-dismiss="modal" aria-hidden="true" Ã—
  .slider
    ul.slides.unstyled
      - @product.product_images.each do |image|
        li.slide-glide
          = image_tag(image.image_url)

