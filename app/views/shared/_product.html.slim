#productView
  .product.span3
     .product-image= image_tag(product.product_images.first.image_url)
     h3.product-name= link_to truncate(product.name, length: 25), product_path(product)
     p.product-description= truncate(product.description.html_safe, length: 80)
     p.product-price= number_to_currency(product.price)
     p=link_to t('.add_to_cart'), add_to_cart_product_path(product), remote: true, class: "btn btn-primary"
